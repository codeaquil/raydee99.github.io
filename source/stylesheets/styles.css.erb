.mobile-btn {
  width: 50vw;
}

.mobile-icon-flex {
  width: 28px;
  height: 28px;
}
@media (min-width: 768px) {
  .mobile-icon-flex {
    width: 30px;
    height: 30px;
  }
}
@media (min-width: 992px) {
  .mobile-icon-flex {
    width: 34px;
    height: 34px;
  }
}

.mobile-iframe-flex {
  height: 160px;
}
@media (min-width: 992px) {
  .mobile-iframe-flex {
    height: 400px;
  }
}

a.nav-link, a.navbar-brand {
  color: var(--bs-gray-300) !important;
  text-align: center !important;
}

a.nav-link:hover, a.navbar-brand:hover, a.nav-btn:hover {
  font-weight: bold;
}

a {
  text-shadow: none !important;
}

footer a {
  color: var(--bs-yellow)!important;
}

.text-muted {
  color: var(--bs-yellow)!important;
}

.fade-in {
    opacity: 0;
    animation: fadeIn 4s ease-in forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* TODO fix */
.slide-in-top {
  display: none;
  animation: slideInTop 1s forwards;
}

@keyframes slideInTop {
  from {
    transform: translateY(-100%);
  }
  to {
    transform: translateY(0);
  }
}

body {
  /* Gradient with background-image purple: */
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #250c32), color-stop(75%, #250c32), to(#0c1f4c));
  background-image: linear-gradient(#250c32 75%, #0c1f4c 100%);

  color: var(--bs-white);
}

@media (min-width: 992px) {
  body {
    background: #250c32 url(<%= image_path('background_image_animated.gif') %>) no-repeat fixed center / 100% content-box;
  }
}

root {
  --bs-body-bg: #250c32;
}
